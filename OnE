        QMessageBox.information(self, "Metrics", "Would load advanced charts here.")


# ----------------------------------------------------------------------
# CompositeRulesTab
# ----------------------------------------------------------------------
class CompositeRulesTab(QWidget):
    def __init__(self, connection, parent=None):
        super().__init__(parent)
        self.connection = connection
        layout = QVBoxLayout(self)

        self.cr_table = QTableWidget(0, 4)
        self.cr_table.setHorizontalHeaderLabels(["CompRuleID", "Name", "Expr", "ActionOnPass"])
        self.cr_table.horizontalHeader().setStretchLastSection(True)
        layout.addWidget(self.cr_table)

        bh = QHBoxLayout()
        addb = QPushButton("Add Composite")
        addb.clicked.connect(self.add_composite)
        bh.addWidget(addb)

        delb = QPushButton("Delete Composite")
        delb.clicked.connect(self.delete_composite)
        bh.addWidget(delb)

        refb = QPushButton("Refresh")
        refb.clicked.connect(self.load_composites)
        bh.addWidget(refb)
        bh.addStretch()
        layout.addLayout(bh)

        self.setLayout(layout)
        self.load_composites()

    def load_composites(self):
        self.cr_table.setRowCount(0)
        c = self.connection.cursor()
        c.execute(
            "SELECT COMPOSITE_RULE_ID,CRULE_NAME,LOGIC_EXPR,ACTION_ON_PASS FROM COMPOSITE_RULES ORDER BY COMPOSITE_RULE_ID")
        rows = c.fetchall()
        for row in rows:
            r_ = self.cr_table.rowCount()
            self.cr_table.insertRow(r_)
            for col_i, val in enumerate(row):
                self.cr_table.setItem(r_, col_i, QTableWidgetItem(str(val) if val else ""))

    def get_selected_crid(self):
        sel = self.cr_table.selectedItems()
        if not sel:
            return None
        row = sel[0].row()
        it = self.cr_table.item(row, 0)
        if not it:
            return None
        return int(it.text())

    def add_composite(self):
        nm, ok = QInputDialog.getText(self, "Add Composite", "Name:")
        if not ok or not nm.strip():
            return
        expr, ok2 = QInputDialog.getMultiLineText(self, "Expr", "(Rule10==PASS AND Rule20==PASS)?")
        if not ok2:
            expr = ""
        act, ok3 = QInputDialog.getText(self, "ActionOnPass", "(Optional) e.g. 'SendEmail'")
        if not ok3:
            act = ""
        c = self.connection.cursor()
        try:
            c.execute("""
            INSERT INTO COMPOSITE_RULES(CRULE_NAME,LOGIC_EXPR,ACTION_ON_PASS)
            VALUES(?,?,?)
            """, (nm.strip(), expr.strip(), act.strip()))
            self.connection.commit()
            QMessageBox.information(self, "Created", "Composite rule added.")
            self.load_composites()
        except Exception as ex:
            QMessageBox.critical(self, "Error", str(ex))

    def delete_composite(self):
        crid = self.get_selected_crid()
        if not crid:
            QMessageBox.warning(self, "None", "No composite row selected.")
            return
        confirm = QMessageBox.question(self, "Delete", f"Delete composite {crid}?")
        if confirm == QMessageBox.Yes:
            c = self.connection.cursor()
            try:
                c.execute("DELETE FROM COMPOSITE_RULES WHERE COMPOSITE_RULE_ID=?", (crid,))
                self.connection.commit()
                QMessageBox.information(self, "Deleted", f"Composite rule {crid} removed.")
                self.load_composites()
            except Exception as ex:
                QMessageBox.critical(self, "Error", str(ex))


# ----------------------------------------------------------------------
# HierarchyTab
# ----------------------------------------------------------------------
class HierarchyTab(QTreeWidget):
    """
    Groups => rules => drag-and-drop => set parent, group_id => status=INACTIVE => etc.
    """

    def __init__(self, connection, parent=None):
        super().__init__(parent)
        self.connection = connection
        self.setHeaderLabels(["Group / Rule"])
        self.setDragEnabled(True)
        self.setAcceptDrops(True)
        self.setDragDropMode(QTreeWidget.InternalMove)

        self.load_hierarchy()

    def load_hierarchy(self):
        self.clear()
        # pseudo
        c = self.connection.cursor()
        c.execute("SELECT GROUP_ID,GROUP_NAME FROM BRM_RULE_GROUPS ORDER BY GROUP_ID")
        groups = c.fetchall()
        group_items = {}
        for (gid, gname) in groups:
            it = QTreeWidgetItem([f"{gname} (ID={gid})"])
            it.setData(0, Qt.UserRole, ("group", gid))
            self.addTopLevelItem(it)
            group_items[gid] = it

        # gather rules
        c.execute("SELECT RULE_ID,RULE_NAME,GROUP_ID,PARENT_RULE_ID FROM BRM_RULES ORDER BY RULE_ID")
        rules = c.fetchall()
        rule_map = {}
        for (rid, rnm, gr, par) in rules:
            rule_map[rid] = (rnm, gr, par)

        # place top-level
        for (rid, (rnm, gr, par)) in rule_map.items():
            if not par:
                if gr in group_items:
                    ch = QTreeWidgetItem([f"Rule {rid}: {rnm}"])
                    ch.setData(0, Qt.UserRole, ("rule", rid))
                    group_items[gr].addChild(ch)

        # place child rules
        # minimal approach
        # you may do BFS or second pass
        all_rule_items = {}
        # fill them
        for grpIt in group_items.values():
            for i in range(grpIt.childCount()):
                ci = grpIt.child(i)
                data_ = ci.data(0, Qt.UserRole)
                if data_ and data_[0] == "rule":
                    rid_ = data_[1]
                    all_rule_items[rid_] = ci

        # now handle any that has a parent not null
        for rid, (rnm, gr, par) in rule_map.items():
            if par and par in all_rule_items:
                parent_node = all_rule_items[par]
                ch = QTreeWidgetItem([f"Rule {rid}: {rnm}"])
                ch.setData(0, Qt.UserRole, ("rule", rid))
                parent_node.addChild(ch)
                all_rule_items[rid] = ch

        self.expandAll()

    def dropEvent(self, event):
        super().dropEvent(event)
        self.update_db_parenting()
        self.load_hierarchy()

    def update_db_parenting(self):
        c = self.connection.cursor()
        top_count = self.topLevelItemCount()
        for i in range(top_count):
            group_node = self.topLevelItem(i)
            d = group_node.data(0, Qt.UserRole)
            if d and d[0] == "group":
                gid = d[1]
                for j in range(group_node.childCount()):
                    ch = group_node.child(j)
                    self.recursive_update(ch, None, gid, c)
        c.commit()

    def recursive_update(self, item, parent_rule_id, group_id, cursor):
        data_ = item.data(0, Qt.UserRole)
        if data_ and data_[0] == "rule":
            rid = data_[1]
            # set parent_rule_id=?, group_id=?, status=INACTIVE => re-approval
            cursor.execute("""
            UPDATE BRM_RULES
            SET PARENT_RULE_ID=?, GROUP_ID=?, STATUS='INACTIVE', APPROVAL_STATUS='APPROVAL_IN_PROGRESS'
            WHERE RULE_ID=?
            """, (parent_rule_id, group_id, rid))
            # child pass
            for i in range(item.childCount()):
                ch = item.child(i)
                self.recursive_update(ch, rid, group_id, cursor)


# ----------------------------------------------------------------------
# CustomRuleGroupsTab
# ----------------------------------------------------------------------
class CustomRuleGroupsTab(QWidget):
    """
    Manage custom rule groups => create, rename, delete, backups, etc.
    Left tree => group => assigned rules
    Right => available rules
    """

    def __init__(self, connection, user_id, user_group, parent=None):
        super().__init__(parent)
        self.connection = connection
        self.user_id = user_id
        self.user_group = user_group

        main_layout = QVBoxLayout(self)

        top_h = QHBoxLayout()
        self.new_grp_edit = QLineEdit()
        self.new_grp_edit.setPlaceholderText("New custom group name")
        top_h.addWidget(self.new_grp_edit)

        create_btn = QPushButton("Create")
        create_btn.clicked.connect(self.create_group)
        top_h.addWidget(create_btn)

        ren_btn = QPushButton("Rename")
        ren_btn.clicked.connect(self.rename_group)
        top_h.addWidget(ren_btn)

        del_btn = QPushButton("Delete")
        del_btn.clicked.connect(self.delete_group)
        top_h.addWidget(del_btn)

        bkp_btn = QPushButton("Backup")
        bkp_btn.clicked.connect(self.backup_group)
        top_h.addWidget(bkp_btn)

        rst_btn = QPushButton("Restore")
        rst_btn.clicked.connect(self.restore_group)
        top_h.addWidget(rst_btn)

        top_h.addStretch()
        main_layout.addLayout(top_h)

        splitter = QtWidgets.QSplitter(QtCore.Qt.Horizontal)
        main_layout.addWidget(splitter)

        left_w = QWidget()
        lw = QVBoxLayout(left_w)

        self.group_tree = QTreeWidget()
        self.group_tree.setHeaderLabels(["CustomGroup / Rule"])
        self.group_tree.setContextMenuPolicy(Qt.CustomContextMenu)
        self.group_tree.customContextMenuRequested.connect(self.tree_context)
        lw.addWidget(self.group_tree)
        left_w.setLayout(lw)

        right_w = QWidget()
        rw = QVBoxLayout(right_w)

        self.rule_search = QLineEdit()
        self.rule_search.setPlaceholderText("Search rules..")
        self.rule_search.textChanged.connect(self.load_available_rules)
        rw.addWidget(self.rule_search)

        self.rule_list = QtWidgets.QListWidget()
        self.rule_list.setSelectionMode(QtWidgets.QAbstractItemView.ExtendedSelection)
        rw.addWidget(self.rule_list)

        assign_btn = QPushButton("Assign Selected Rule(s)")
        assign_btn.clicked.connect(self.assign_rules)
        rw.addWidget(assign_btn)

        right_w.setLayout(rw)

        splitter.addWidget(left_w)
        splitter.addWidget(right_w)

        self.setLayout(main_layout)
        self.refresh_all()

    def refresh_all(self):
        self.load_group_tree()
        self.load_available_rules()

    def load_group_tree(self):
        self.group_tree.clear()
        c = self.connection.cursor()
        c.execute("""
        SELECT CUSTOM_GROUP_ID,CUSTOM_GROUP_NAME,OWNER_BUSINESS_GROUP
        FROM BRM_CUSTOM_RULE_GROUPS
        ORDER BY CUSTOM_GROUP_ID DESC
        """)
        groups = c.fetchall()
        for (gid, gname, own) in groups:
            disp = f"{gname} (Owner={own})"
            gitem = QTreeWidgetItem([disp])
            gitem.setData(0, Qt.UserRole, gid)
            self.group_tree.addTopLevelItem(gitem)

            c2 = self.connection.cursor()
            c2.execute("""
            SELECT M.RULE_ID,R.RULE_NAME,R.IS_GLOBAL,R.CRITICAL_RULE,R.OPERATION_TYPE,R.LOCKED_BY
            FROM BRM_CUSTOM_GROUP_MEMBERS M
            JOIN BRM_RULES R ON M.RULE_ID=R.RULE_ID
            WHERE M.CUSTOM_GROUP_ID=?
            """, (gid,))
            assigned = c2.fetchall()
            for row_ in assigned:
                rid, rn, isg, isc, opt, locked = row_
                txt = f"Rule {rid}: {rn}"
                rr = QTreeWidgetItem([txt])
                rr.setData(0, Qt.UserRole, rid)
                # color-coded
                gitem.addChild(rr)
        self.group_tree.expandAll()

    def load_available_rules(self):
        self.rule_list.clear()
        txt = self.rule_search.text().strip()
        c = self.connection.cursor()
        if txt:
            c.execute("""
            SELECT RULE_ID,RULE_NAME,OWNER_GROUP
            FROM BRM_RULES
            WHERE RULE_NAME LIKE ? OR RULE_SQL LIKE ?
            ORDER BY RULE_ID DESC
            """, (f"%{txt}%", f"%{txt}%"))
        else:
            c.execute("SELECT RULE_ID,RULE_NAME,OWNER_GROUP FROM BRM_RULES ORDER BY RULE_ID DESC")
        rows = c.fetchall()

        c2 = self.connection.cursor()
        c2.execute("SELECT DISTINCT RULE_ID FROM BRM_CUSTOM_GROUP_MEMBERS")
        assigned_set = set(r[0] for r in c2.fetchall())

        for (rid, rn, og) in rows:
            if rid in assigned_set:
                continue
            disp = f"Rule {rid}: {rn} (Owner={og})"
            it = QtWidgets.QListWidgetItem(disp)
            it.setData(Qt.UserRole, rid)
            self.rule_list.addItem(it)

    def tree_context(self, pos):
        item = self.group_tree.itemAt(pos)
        if not item:
            return
        parent = item.parent()
        if parent:  # => rule
            menu = QtWidgets.QMenu()
            rem_act = menu.addAction("Remove Rule from Group")
            chosen = menu.exec_(self.group_tree.viewport().mapToGlobal(pos))
            if chosen == rem_act:
                g_id = parent.data(0, Qt.UserRole)
                r_id = item.data(0, Qt.UserRole)
                self.remove_rule_from_group(g_id, r_id)

    def remove_rule_from_group(self, group_id, rule_id):
        # if locked => check admin
        c = self.connection.cursor()
        c.execute("SELECT LOCKED_BY FROM BRM_RULES WHERE RULE_ID=?", (rule_id,))
        row = c.fetchone()
        if row and row[0]:
            if self.user_group != "Admin":
                QMessageBox.warning(self, "Locked", f"Rule locked by {row[0]}, only admin can forcibly remove.")
                return
            # force unlock
            c.execute("DELETE FROM BRM_RULE_LOCKS WHERE RULE_ID=? AND ACTIVE_LOCK=1", (rule_id,))
        c.execute("DELETE FROM BRM_CUSTOM_GROUP_MEMBERS WHERE CUSTOM_GROUP_ID=? AND RULE_ID=?", (group_id, rule_id))
        self.connection.commit()
        QMessageBox.information(self, "Removed", f"Rule {rule_id} removed from group {group_id}.")
        self.refresh_all()

    def create_group(self):
        nm = self.new_grp_edit.text().strip()
        if not nm:
            QMessageBox.warning(self, "None", "No group name.")
            return
        c = self.connection.cursor()
        c.execute("""
        INSERT INTO BRM_CUSTOM_RULE_GROUPS(CUSTOM_GROUP_NAME,OWNER_BUSINESS_GROUP,CREATED_BY,CREATED_TIMESTAMP)
        VALUES(?,?,?,GETDATE())
        """, (nm, self.user_group, f"User:{self.user_id}"))
        self.connection.commit()
        QMessageBox.information(self, "Created", f"Custom group '{nm}' created.")
        self.new_grp_edit.clear()
        self.refresh_all()

    def get_selected_group(self):
        sel = self.group_tree.selectedItems()
        if not sel:
            return None
        it = sel[0]
        par = it.parent()
        if par:
            it = par
        return it.data(0, Qt.UserRole)

    def rename_group(self):
        gid = self.get_selected_group()
        if not gid:
            QMessageBox.warning(self, "None", "No group selected.")
            return
        new_name, ok = QInputDialog.getText(self, "Rename", "New group name:")
        if not ok or not new_name.strip():
            return
        c = self.connection.cursor()
        c.execute("""
        UPDATE BRM_CUSTOM_RULE_GROUPS
        SET CUSTOM_GROUP_NAME=?
        WHERE CUSTOM_GROUP_ID=?
        """, (new_name.strip(), gid))
        self.connection.commit()
        QMessageBox.information(self, "Renamed", f"Group {gid} => {new_name}")
        self.refresh_all()

    def delete_group(self):
        gid = self.get_selected_group()
        if not gid:
            QMessageBox.warning(self, "None", "No group selected.")
            return
        confirm = QMessageBox.question(self, "Confirm", f"Delete custom group {gid}?")
        if confirm == QMessageBox.Yes:
            c = self.connection.cursor()
            c.execute("DELETE FROM BRM_CUSTOM_RULE_GROUPS WHERE CUSTOM_GROUP_ID=?", (gid,))
            self.connection.commit()
            QMessageBox.information(self, "Deleted", f"Group {gid} removed.")
            self.refresh_all()

    def backup_group(self):
        gid = self.get_selected_group()
        if not gid:
            QMessageBox.warning(self, "None", "No group selected.")
            return
        c = self.connection.cursor()
        # gather name+members
        c.execute("SELECT CUSTOM_GROUP_NAME FROM BRM_CUSTOM_RULE_GROUPS WHERE CUSTOM_GROUP_ID=?", (gid,))
        row = c.fetchone()
        if not row:
            QMessageBox.warning(self, "Missing", f"Group {gid} not found.")
            return
        gnm = row[0]
        c.execute("SELECT RULE_ID FROM BRM_CUSTOM_GROUP_MEMBERS WHERE CUSTOM_GROUP_ID=?", (gid,))
        mems = [r[0] for r in c.fetchall()]
        import json
        data = {"group_name": gnm, "members": mems}

        c.execute("SELECT ISNULL(MAX(BACKUP_VERSION),0)+1 FROM BRM_CUSTOM_GROUP_BACKUPS WHERE CUSTOM_GROUP_ID=?",
                  (gid,))
        ro = c.fetchone()
        new_ver = ro[0] if ro else 1
        c.execute("""
        INSERT INTO BRM_CUSTOM_GROUP_BACKUPS(CUSTOM_GROUP_ID,BACKUP_TIMESTAMP,BACKUP_VERSION,BACKUP_JSON)
        VALUES(?,GETDATE(),?,?)
        """, (gid, new_ver, json.dumps(data)))
        self.connection.commit()
        QMessageBox.information(self, "Backup", f"Created version {new_ver} for group {gid}")
        self.refresh_all()

    def restore_group(self):
        gid = self.get_selected_group()
        if not gid:
            QMessageBox.warning(self, "None", "No group selected.")
            return
        c = self.connection.cursor()
        c.execute("""
        SELECT BACKUP_VERSION,BACKUP_TIMESTAMP,BACKUP_JSON
        FROM BRM_CUSTOM_GROUP_BACKUPS
        WHERE CUSTOM_GROUP_ID=?
        ORDER BY BACKUP_VERSION DESC
        """, (gid,))
        rows = c.fetchall()
        if not rows:
            QMessageBox.information(self, "None", "No backups found.")
            return
        items = [f"Version {r[0]} (TS={r[1]})" for r in rows]
        sel, ok = QInputDialog.getItem(self, "Restore", "Pick version:", items, 0, False)
        if not ok or not sel:
            return
        import re, json
        m = re.search(r"Version\s+(\d+)", sel)
        if not m:
            return
        ver = int(m.group(1))
        bkp_json = None
        for r_ in rows:
            if r_[0] == ver:
                bkp_json = r_[2]
                break
        if not bkp_json:
            QMessageBox.warning(self, "Missing", "Backup not found.")
            return
        confirm = QMessageBox.question(self, "Confirm", f"Restore group {gid} => version {ver}?")
        if confirm != QMessageBox.Yes:
            return
        try:
            data = json.loads(bkp_json)
            new_n = data.get("group_name", "RestoredGroup")
            members = data.get("members", [])

            c.execute("BEGIN TRANSACTION")
            c.execute("UPDATE BRM_CUSTOM_RULE_GROUPS SET CUSTOM_GROUP_NAME=? WHERE CUSTOM_GROUP_ID=?", (new_n, gid))
            c.execute("DELETE FROM BRM_CUSTOM_GROUP_MEMBERS WHERE CUSTOM_GROUP_ID=?", (gid,))
            for mid in members:
                # if locked => only admin can override, etc.
                c.execute("""
                INSERT INTO BRM_CUSTOM_GROUP_MEMBERS(CUSTOM_GROUP_ID,RULE_ID)
                VALUES(?,?)
                """, (gid, mid))
            c.execute("COMMIT")
            QMessageBox.information(self, "Restored", f"Group {gid} => version {ver} restored.")
            self.refresh_all()
        except Exception as ex:
            c.execute("ROLLBACK")
            QMessageBox.critical(self, "Error", str(ex))


# ----------------------------------------------------------------------
# WhatIfTestTab
# ----------------------------------------------------------------------
class WhatIfTestTab(QWidget):
    """
    Let user pick a rule => upload CSV => do BFS or single rule test => show pass/fail
    """

    def __init__(self, connection, parent=None):
        super().__init__(parent)
        self.connection = connection
        self.csv_path = None

        layout = QVBoxLayout(self)
        top_h = QHBoxLayout()
        self.rule_combo = QComboBox()
        c = connection.cursor()
        c.execute("SELECT RULE_ID,RULE_NAME FROM BRM_RULES ORDER BY RULE_ID")
        rows = c.fetchall()
        for (rid, rn) in rows:
            disp = f"{rid} - {rn}"
            self.rule_combo.addItem(disp, rid)
        top_h.addWidget(QLabel("Select Rule:"))
        top_h.addWidget(self.rule_combo)

        csv_btn = QPushButton("Upload CSV")
        csv_btn.clicked.connect(self.upload_csv)
        top_h.addWidget(csv_btn)

        run_btn = QPushButton("Run DryRun")
        run_btn.clicked.connect(self.run_test)
        top_h.addWidget(run_btn)

        top_h.addStretch()
        layout.addLayout(top_h)

        self.result_edit = QPlainTextEdit()
        self.result_edit.setReadOnly(True)
        layout.addWidget(self.result_edit)

        self.setLayout(layout)

    def upload_csv(self):
        path, _ = QtWidgets.QFileDialog.getOpenFileName(self, "Pick CSV", "", "CSV Files (*.csv)")
        if path:
            self.csv_path = path
            QMessageBox.information(self, "Uploaded", f"CSV {path} set. You can use it in your test logic if needed.")

    def run_test(self):
        rid = self.rule_combo.currentData()
        c = self.connection.cursor()
        c.execute("SELECT RULE_SQL,OPERATION_TYPE FROM BRM_RULES WHERE RULE_ID=?", (rid,))
        row = c.fetchone()
        if not row:
            self.result_edit.setPlainText("Rule not found.")
            return
        sql_ = row[0] or ""
        op_ = row[1] or "OTHER"
        if op_.upper() == "DECISION_TABLE":
            self.result_edit.setPlainText(f"Rule {rid} => DECISION_TABLE => treat as pass in this sample.")
            return
        # do a naive "dry-run"
        try:
            c.execute("BEGIN TRANSACTION")
            c.execute(sql_)
            rows = c.fetchall()
            pass_flag = False
            msg = ""
            if rows:
                val = rows[0][0]
                pass_flag = (val == 1)
                msg = f"Returned {val}"
            else:
                pass_flag = True
                msg = "No rows => pass"
            c.execute("ROLLBACK")
            text = f"Rule {rid} => pass={pass_flag}, {msg}"
            self.result_edit.setPlainText(text)
            QMessageBox.information(self, "Result", text)
        except Exception as ex:
            c.execute("ROLLBACK")
            text = f"Error => {ex}"
            self.result_edit.setPlainText(text)
            QMessageBox.critical(self, "Error", str(ex))


# ----------------------------------------------------------------------
# ConflictPriorityTab
# ----------------------------------------------------------------------
class ConflictPriorityTab(QWidget):
    def __init__(self, connection, parent=None):
        super().__init__(parent)
        self.connection = connection
        layout = QVBoxLayout(self)

        self.cf_table = QTableWidget(0, 4)
        self.cf_table.setHorizontalHeaderLabels(["ConflictID", "Rule1", "Rule2", "Priority"])
        self.cf_table.horizontalHeader().setStretchLastSection(True)
        layout.addWidget(self.cf_table)

        bh = QHBoxLayout()
        addb = QPushButton("Add Conflict")
        addb.clicked.connect(self.add_conflict)
        bh.addWidget(addb)

        setp = QPushButton("Set Priority")
        setp.clicked.connect(self.set_priority)
        bh.addWidget(setp)

        delb = QPushButton("Delete Conflict")
        delb.clicked.connect(self.del_conflict)
        bh.addWidget(delb)

        refb = QPushButton("Refresh")
        refb.clicked.connect(self.load_conflicts)
        bh.addWidget(refb)

        bh.addStretch()
        layout.addLayout(bh)

        self.setLayout(layout)
        self.load_conflicts()

    def load_conflicts(self):
        self.cf_table.setRowCount(0)
        c = self.connection.cursor()
        c.execute("SELECT CONFLICT_ID,RULE_ID1,RULE_ID2,PRIORITY FROM RULE_CONFLICTS ORDER BY CONFLICT_ID")
        rows = c.fetchall()
        for row in rows:
            r_ = self.cf_table.rowCount()
            self.cf_table.insertRow(r_)
            for col_i, val in enumerate(row):
                self.cf_table.setItem(r_, col_i, QTableWidgetItem(str(val) if val else ""))

    def get_selected_conflict_id(self):
        sel = self.cf_table.selectedItems()
        if not sel:
            return None
        row = sel[0].row()
        it = self.cf_table.item(row, 0)
        if not it:
            return None
        return int(it.text())

    def add_conflict(self):
        r1, ok = QInputDialog.getInt(self, "Add Conflict", "Rule1 ID:")
        if not ok:
            return
        r2, ok2 = QInputDialog.getInt(self, "Add Conflict", "Rule2 ID:")
        if not ok2:
            return
        pri, ok3 = QInputDialog.getInt(self, "Priority", "Number:", value=1)
        if not ok3:
            return
        c = self.connection.cursor()
        c.execute("INSERT INTO RULE_CONFLICTS(RULE_ID1,RULE_ID2,PRIORITY) VALUES(?,?,?)", (r1, r2, pri))
        self.connection.commit()
        QMessageBox.information(self, "Added", "Conflict inserted.")
        self.load_conflicts()

    def set_priority(self):
        cfid = self.get_selected_conflict_id()
        if not cfid:
            QMessageBox.warning(self, "None", "No conflict row selected.")
            return
        newp, ok = QInputDialog.getInt(self, "Priority", "New priority:", value=1)
        if not ok:
            return
        c = self.connection.cursor()
        c.execute("UPDATE RULE_CONFLICTS SET PRIORITY=? WHERE CONFLICT_ID=?", (newp, cfid))
        self.connection.commit()
        QMessageBox.information(self, "Updated", f"Conflict {cfid} => priority={newp}")
        self.load_conflicts()

    def del_conflict(self):
        cfid = self.get_selected_conflict_id()
        if not cfid:
            QMessageBox.warning(self, "None", "No conflict row.")
            return
        confirm = QMessageBox.question(self, "Confirm", f"Delete conflict {cfid}?")
        if confirm == QMessageBox.Yes:
            c = self.connection.cursor()
            c.execute("DELETE FROM RULE_CONFLICTS WHERE CONFLICT_ID=?", (cfid,))
            self.connection.commit()
            QMessageBox.information(self, "Removed", f"Conflict {cfid} removed.")
            self.load_conflicts()


# ----------------------------------------------------------------------
# Collaboration Manager & Tab
# ----------------------------------------------------------------------
class CollaborationManager(QtCore.QObject):
    locks_updated = QtCore.pyqtSignal(list)

    def __init__(self, connection, poll_ms=5000, parent=None):
        super().__init__(parent)
        self.connection = connection
        self.timer = QTimer(self)
        self.timer.timeout.connect(self.poll_locks)
        self.timer.start(poll_ms)

    def poll_locks(self):
        c = self.connection.cursor()
        try:
            c.execute("""
            SELECT RULE_ID,LOCKED_BY,LOCK_TIMESTAMP,EXPIRY_TIMESTAMP,FORCE_LOCK
            FROM BRM_RULE_LOCKS
            WHERE ACTIVE_LOCK=1
            """)
            rows = c.fetchall()
            lock_list = []
            for row in rows:
                lock_list.append((row[0], row[1], row[2], row[3], row[4]))
            self.locks_updated.emit(lock_list)
        except Exception as ex:
            logging.error(f"Collab poll error: {ex}")


class CollaborationTab(QWidget):
    def __init__(self, connection, collab_manager, parent=None):
        super().__init__(parent)
        self.connection = connection
        self.collab_manager = collab_manager
        layout = QVBoxLayout(self)

        layout.addWidget(QLabel("Collaboration: who is editing which rule."))

        self.table = QTableWidget(0, 5)
        self.table.setHorizontalHeaderLabels(["RuleID", "LockedBy", "LockTS", "ExpiryTS", "ForceLock?"])
        self.table.horizontalHeader().setStretchLastSection(True)
        layout.addWidget(self.table)

        bh = QHBoxLayout()
        self.force_btn = QPushButton("Force Unlock Selected")
        self.force_btn.clicked.connect(self.do_force_unlock)
        bh.addWidget(self.force_btn)
        bh.addStretch()
        layout.addLayout(bh)

        self.setLayout(layout)
        self.collab_manager.locks_updated.connect(self.update_table)

    def update_table(self, lock_list):
        self.table.setRowCount(0)
        for row_ in lock_list:
            r_ = self.table.rowCount()
            self.table.insertRow(r_)
            for col_i, val in enumerate(row_):
                self.table.setItem(r_, col_i, QTableWidgetItem(str(val) if val else ""))

    def get_selected_rule_id(self):
        sel = self.table.selectedItems()
        if not sel:
            return None
        row = sel[0].row()
        it = self.table.item(row, 0)
        if not it:
            return None
        return int(it.text())

    def do_force_unlock(self):
        rid = self.get_selected_rule_id()
        if not rid:
            QMessageBox.warning(self, "None", "No lock row selected.")
            return
        confirm = QMessageBox.question(self, "Confirm", f"Force unlock rule {rid}?")
        if confirm == QMessageBox.Yes:
            c = self.connection.cursor()
            c.execute("DELETE FROM BRM_RULE_LOCKS WHERE RULE_ID=? AND ACTIVE_LOCK=1", (rid,))
            self.connection.commit()
            QMessageBox.information(self, "Unlocked", f"Rule {rid} forcibly unlocked.")


