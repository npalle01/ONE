        add_btn = QPushButton("Add Rule")
        add_btn.clicked.connect(self.on_add_rule)
        cr_h.addWidget(add_btn)

        upd_btn = QPushButton("Update Rule")
        upd_btn.clicked.connect(self.on_update_rule)
        cr_h.addWidget(upd_btn)

        # Lock and unlock
